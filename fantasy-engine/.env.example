# ESPN Fantasy Football Credentials
# Get these from your browser's developer tools after logging into ESPN Fantasy
ESPN_S2=your_espn_s2_cookie_here
ESPN_SWID={your_swid_here}

# Your ESPN League Information
LEAGUE_1_ID=your_first_league_id
LEAGUE_1_TEAM_ID=your_team_id_in_league_1
LEAGUE_1_NAME="League 1 Name"

LEAGUE_2_ID=your_second_league_id (optional)
LEAGUE_2_TEAM_ID=your_team_id_in_league_2 (optional)
LEAGUE_2_NAME="League 2 Name" (optional)

# LLM API Keys (choose one or more)
OPENAI_API_KEY=sk-your_openai_key_here
CLAUDE_API_KEY=sk-ant-your_claude_key_here
GEMINI_API_KEY=your_gemini_key_here
PERPLEXITY_API_KEY=pplx-your_perplexity_key_here

# Default LLM Provider (claude, openai, gemini, or perplexity)
DEFAULT_LLM_PROVIDER=gemini

# FantasyPros MVP Subscription (optional but recommended)
FANTASYPROS_EMAIL=your_fantasypros_email
FANTASYPROS_PASSWORD=your_fantasypros_password
# OR use session cookie (preferred):
FANTASYPROS_SESSION_ID=your_session_cookie_value

# Cost Monitoring Limits (in USD)
DAILY_COST_LIMIT=2.00
WEEKLY_COST_LIMIT=10.00
MONTHLY_COST_LIMIT=35.00
PER_ANALYSIS_LIMIT=1.00

# Slack Webhook for Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#fantasy-football

# GitHub Actions Settings (for automation)
GITHUB_TOKEN=your_github_token_here